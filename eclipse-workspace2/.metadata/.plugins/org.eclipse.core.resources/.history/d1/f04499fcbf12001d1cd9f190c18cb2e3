#include <stdio.h>

int main(void){
	setbuf(stdout,NULL);
	float width,height,perimeter=0,area=0;


	printf("This is a simple program for finding Perimeter  and area of a rectangle\n");
	printf("Enter the width and the height of the rectangle ");
	scanf("%f",&width);scanf("%f",&height);

	perimeter=(width+height)*2;
	area=height*width;


	printf("perimeter=%1.2f\n",perimeter);
	printf("area=%1.1f",area);










	return 0;
}

