#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout,NULL);

	int n=5, i, j, length=(n*2)-1, start=1, end=length;
	int k=n;

	while(n!=0){
		for(i=start; i<=end; i++){
			for(j=start; j<=end; j++){

				if(j==start|| j==end || i==start || i==end ){
					printf("%d",k);
				}

			}



			printf("\n");
			--k;
			start++;
			end--;
		}



	}





	return EXIT_SUCCESS;
}
